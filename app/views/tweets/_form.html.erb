<%= form_with(model: tweet, local: true) do |form| %>
  <% if tweet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(tweet.errors.count, "error") %> prohibited this tweet from being saved:</h2>

      <ul>
      <% tweet.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="tweet">
    <div class="tweet-head d-flex align-items-center">
      <%= form.label :title, class:'col-sm-2' %>
      <%= form.text_field :title, class:'col-sm-10' %>
    </div>

    <div class="tweet-body no-footer d-flex align-items-center">
      <%= form.label :content, class:'col-sm-2' %>
      <%= form.text_area :content, class:'col-sm-10' %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit 'Submit!', class: 'btn btn-primary'%>
  </div>
<% end %>
